---
import Certs from "../components/Certs.astro"
import Contact from "../components/Contact.astro"
import Experience from "../components/Experience.astro"
import Languages from "../components/Languages.astro"
import Skills from "../components/Skills.astro"
import Summary from "../components/Summary.astro"
import Tech from "../components/Tech.astro"
import RootLayout from "../layout/RootLayout.astro"
---

<RootLayout>
    <div class="md:container flex flex-wrap">
        <header class="md:basis-1/3 bg-dark text-white">
            <h1 class="px-6 pt-5 leading-none">
                <span class="text-3xl font-semibold">Denis Zaitsev</span>
                <br />
                <span class="sr-only"> - </span>
                <span class="text-lg font-light">Frontend Developer</span>
            </h1>
            <Contact />
            <Skills />
            <Certs />
            <Languages />
        </header>
        <main class="md:basis-2/3">
            <Summary />
            <Tech />
            <Experience />
        </main>
    </div>
</RootLayout>
